{
  "name": "Announcement",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Announcement title"
    },
    "content": {
      "type": "string",
      "description": "Announcement content/description"
    },
    "category": {
      "type": "string",
      "enum": [
        "Academic",
        "Events",
        "Holidays",
        "Exams",
        "Important",
        "General"
      ],
      "description": "Announcement category"
    },
    "priority": {
      "type": "string",
      "enum": [
        "Low",
        "Medium",
        "High",
        "Urgent"
      ],
      "default": "Medium",
      "description": "Priority level"
    },
    "target_audience": {
      "type": "string",
      "enum": [
        "All Students",
        "Faculty",
        "Staff",
        "Specific Year",
        "Specific Department"
      ],
      "description": "Who should see this announcement"
    },
    "valid_until": {
      "type": "string",
      "format": "date",
      "description": "When announcement expires"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "File attachments URLs"
    },
    "author": {
      "type": "string",
      "description": "Who posted the announcement"
    },
    "status": {
      "type": "string",
      "enum": [
        "Active",
        "Draft",
        "Expired"
      ],
      "default": "Active",
      "description": "Announcement status"
    }
  },
  "required": [
    "title",
    "content",
    "category",
    "author"
  ]
}
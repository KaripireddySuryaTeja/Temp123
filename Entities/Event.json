{
  "name": "Event",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Event title"
    },
    "description": {
      "type": "string",
      "description": "Detailed event description"
    },
    "category": {
      "type": "string",
      "enum": [
        "Tech",
        "Cultural",
        "Sports",
        "Club",
        "Workshop",
        "Seminar",
        "Competition"
      ],
      "description": "Event category"
    },
    "event_date": {
      "type": "string",
      "format": "date",
      "description": "Event date"
    },
    "event_time": {
      "type": "string",
      "description": "Event time"
    },
    "duration": {
      "type": "string",
      "description": "Event duration"
    },
    "venue": {
      "type": "string",
      "description": "Event venue/location"
    },
    "organizer": {
      "type": "string",
      "description": "Organizing team/club"
    },
    "registration_link": {
      "type": "string",
      "description": "External registration link"
    },
    "prizes": {
      "type": "string",
      "description": "Prize information"
    },
    "max_participants": {
      "type": "number",
      "description": "Maximum participants allowed"
    },
    "poster_url": {
      "type": "string",
      "description": "Event poster image URL"
    },
    "gallery_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Photo gallery URLs after event"
    },
    "status": {
      "type": "string",
      "enum": [
        "Upcoming",
        "Ongoing",
        "Completed",
        "Cancelled"
      ],
      "default": "Upcoming",
      "description": "Event status"
    },
    "average_rating": {
      "type": "number",
      "description": "Average rating from reviews"
    }
  },
  "required": [
    "title",
    "description",
    "category",
    "event_date",
    "venue",
    "organizer"
  ]
}
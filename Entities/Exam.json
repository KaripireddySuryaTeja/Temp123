{
  "name": "Exam",
  "type": "object",
  "properties": {
    "subject_name": {
      "type": "string",
      "description": "Subject name"
    },
    "subject_code": {
      "type": "string",
      "description": "Subject code"
    },
    "exam_type": {
      "type": "string",
      "enum": [
        "Mid-term",
        "End-term",
        "Quiz",
        "Practical",
        "Assignment"
      ],
      "description": "Type of examination"
    },
    "exam_date": {
      "type": "string",
      "format": "date",
      "description": "Examination date"
    },
    "exam_time": {
      "type": "string",
      "description": "Examination time"
    },
    "duration": {
      "type": "string",
      "description": "Exam duration (e.g., 2 hours)"
    },
    "room_number": {
      "type": "string",
      "description": "Examination room"
    },
    "seat_number": {
      "type": "string",
      "description": "Assigned seat number"
    },
    "syllabus": {
      "type": "string",
      "description": "Exam syllabus/chapters"
    },
    "instructions": {
      "type": "string",
      "description": "Special instructions"
    },
    "status": {
      "type": "string",
      "enum": [
        "Scheduled",
        "In Progress",
        "Completed",
        "Cancelled"
      ],
      "default": "Scheduled",
      "description": "Exam status"
    }
  },
  "required": [
    "subject_name",
    "exam_type",
    "exam_date",
    "exam_time",
    "room_number"
  ]
}
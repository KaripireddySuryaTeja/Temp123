{
  "name": "LibraryBook",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Book title"
    },
    "author": {
      "type": "string",
      "description": "Book author"
    },
    "isbn": {
      "type": "string",
      "description": "ISBN number"
    },
    "category": {
      "type": "string",
      "description": "Book category/subject"
    },
    "publisher": {
      "type": "string",
      "description": "Publisher name"
    },
    "publication_year": {
      "type": "number",
      "description": "Year of publication"
    },
    "copies_available": {
      "type": "number",
      "description": "Available copies"
    },
    "total_copies": {
      "type": "number",
      "description": "Total copies in library"
    },
    "location": {
      "type": "string",
      "description": "Shelf location in library"
    },
    "description": {
      "type": "string",
      "description": "Book description"
    },
    "status": {
      "type": "string",
      "enum": [
        "Available",
        "Issued",
        "Reserved",
        "Lost"
      ],
      "default": "Available",
      "description": "Book status"
    }
  },
  "required": [
    "title",
    "author",
    "category",
    "copies_available",
    "total_copies"
  ]
}